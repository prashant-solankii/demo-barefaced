<div class="product-price {{ classes | join: ' ' }}" data-price-wrapper  itemprop="offers" itemscope itemtype="http://schema.org/Offer">
  <link itemprop="availability" href="http://schema.org/InStock">
  <meta itemprop="priceCurrency" content="{{ shop.currency }}">
  <meta itemprop="price" content="{{ sca_price | divided_by: 100.00 }}">
  
    {% unless product.available %}
      <s>
    {% endunless %}

    <span data-product-price>
      {% if sca_compare_at_price > sca_price %}
        {% if sca_price_varies %}
          {%- assign sale_price = sca_price | money -%}
          {{ 'products.product.on_sale_from_html' | t: price: sale_price }}
        {% else %}
          {{ sca_price | money }}
        {% endif %}
      {% else %}
        {% if sca_price_varies %}
          {%- assign price = sca_price | money -%}
          {{ 'products.product.from_text_html' | t: price: price }}
        {% else %}
          {{ sca_price | money }}
        {% endif %}
      {% endif %}
    </span>

    {% if sca_compare_at_price > sca_price %}
      <span class="screenreader-text" data-compare-text>{{ 'products.product.regular_price' | t }}</span>
      <s class="product-price__compare-at" data-compare-pric>{{ sca_compare_at_price | money }}</s>
    {% endif %}

    {% unless product.available %}
      </s>
      <div class="product-price__soldout">
        {{ 'products.product.sold_out' | t }}
      </div>
    {% endunless %}
  
</div>
